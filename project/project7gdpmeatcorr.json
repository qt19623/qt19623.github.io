
{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/qt19623/qt19623.github.io/main/project/gdpmeatcorr.csv"
  },
    "title": {
    "text": "Annual individual meat consumption in developed countries and devloping countries",
    "subtitle": "Bubble size based on weight of meat, Source: OECD",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black"
  },
"transform":[
    {"filter":{"field":"Commodity",
 "equal":"Total meat"}}],
  "layer": [
    {
      "mark": {
        "type": "point",
        "filled": true,
        "color": "salmon"
      },
      "encoding": {
        "x": {
          "field": "gdppc",
          "type": "quantitative"
        },
        "y": {
          "field": "Value",
          "type": "quantitative",
          "title":"meat consumption(kg)"
        },
     "tooltip": [
      {"field": "Value","title":"kg", "type": "quantitative"},
      {"field": "Country", "type": "nominal"}
    ]
      }
    },
    {
      "mark": {
        "type": "line",
        "color": "firebrick"
      },
      "transform": [
        {
          "regression": "Value",
          "on": "gdppc"
        }
      ],
      "encoding": {
        "x": {
          "field": "gdppc",
          "type": "quantitative"
        },
        "y": {
          "field": "Value",
          "type": "quantitative"
        }
      }
    }
  ]
}

{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.2.0.json",

"title": {
    "text": "Real Gross Domestic Product ",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black"
  },

  "data": {
    "url": "https://api.worldbank.org/v2/country/all/indicator/NY.GDP.PCAP.CD?format=json&per_page=16226&date=2000:2010",
    "format":{
        "type":"json"
      }
  },

  "height": 300,
  
  "width": 280,
  
  "mark": {"type": "line"},
  
  "encoding": {
    "x": {
      "field": "date", 
      "type":"temporal"},
    "y": {
      "field": "value",
      "type": "quantitative"
    },
    
    "color": {
      "field": "countryiso3code",
      "type": "nominal"
    }
  }
}
